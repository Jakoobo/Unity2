import pgzrun
from pgzero.screen import Screen
from pgzero.builtins import Actor, keyboard
from klasa postaci gracza import Gracz
from enemy import Enemy, enemy_should_move
from czas import czas
form event import Event


WIDTH = 600
HEIGHT = 660
keys: keyboard
screen: Screen

gracz = Gracz(keys)
enemy = Enemy()
#mapa kolorowa, to tylko nakładka
color_map = Actor('map1a.jpg', pos = (300, 360), achor = (0, 0)) #pos=(0, 60) coś tu się psuje

def End_game():   #tu może być otrzebne wstawić jakieś argumenty, żeby móc się odwołać do gracz.lives, gracz.money     
                  #może powinno się to znaleść w graczu a nie w mainie?
    if gracz.lives <= 0 or gracz.money <= 0:
        global end_game
        end_game = True
        
#chyba moglibyśmy przenieść koniec od emilii do maina?

def draw():
    screen.fill((0, 0, 0))
    color_map.draw()
    gracz.draw(screen)
    enemy.draw()
    if end_game = True:
        screen.clear()           #tu jest zakończenie i ewentualnie przejście do kolejnej mapy

def on_key_down(key):
    gracz.on_key_down(key)


def on_key_up(key):
    gracz.on_key_up(key)    #posatć porusza się tylko wtedy gdy jest przycisk wciśnięty


def update():
    gracz.update()
    enemy.update()
    czas.update()
    event.update()
    End_game()
    
pgzrun.go()
